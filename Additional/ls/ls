### Piperita Theme ###
# Theme by Jacob Tomlinson
# https://github.com/killfall/terminal-piperita

# Set ls colours
export LSCOLORS=ExFxBxDxCxegedabagacad

# Aliases to make ls easier to use in different modes, taken from RHEL 6
alias ls='ls -GFh'
alias ll="ls -l"
alias lo="ls -o"
alias lh="ls -lh"
alias la="ls -la"
alias sl="ls"

### End Piperita Theme ###
